<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTitle">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppPrimary">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/brand_color</item>
    </style>

    <style name="AppTitlePrimary" parent="AppTitle">
        <item name="android:textSize">@dimen/text_size_20sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_7dp</item>
    </style>

    <style name="AppTitleSecondary" parent="AppTitle">
        <item name="android:textSize">@dimen/text_size_10sp</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_3dp</item>
    </style>

    <style name="AppPrimaryStyle" parent="AppPrimary">
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_5dp</item>
    </style>

    <style name="AppSecondaryStyle" parent="AppPrimary">
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_5dp</item>
    </style>

    <style name="AppHintStyle">
        <item name="android:fontWeight">600</item>
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_5dp</item>
        <item name="android:textColor">@color/brand_70</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">@dimen/inset_button</item>
        <item name="android:insetBottom">@dimen/inset_button</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:lineSpacingExtra">@dimen/extra_spacing_5dp</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

</resources>